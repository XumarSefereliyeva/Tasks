@using CharityProjectMVC.Models
@model List<Cause>
<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">


        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Basic Table</h6>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Price</th>
                            <th scope="col">ImgUrl</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Cause item in Model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Price</td>
                                <td><img src="~/assets/images/@item.ImgUrl" /></td>
                                <td>
                                 <a asp-controller="Cause" asp-action="Delete" asp-route-id="@item.Id" type="submit" class="btn btn-primary">Delete</a>
                                    <a asp-controller="Cause" asp-action="Update" asp-route-id="@item.Id" type="submit" class="btn btn-primary">Update</a>

                                    <a asp-controller="Cause" asp-action="Info" asp-route-id="@item.Id" type="submit" class="btn btn-primary">Info</a>
                                </td>
                            </tr>
                       
                        }
                  

                    </tbody>
                </table>
            </div>
        </div>


    </div>
</div>
<a asp-controller="Cause" asp-action="Create"  type="submit" class="btn btn-primary">Create</a>

<!-- Table End -->
